<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/Relative_Layout"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="@color/colorPrimaryDark"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <ImageView
                android:id="@+id/Profile_Image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/profile_image"
                android:background="@drawable/square_shape"
                android:padding="5dp"
                />
            <TextView
                android:id="@+id/Profile_Image_first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/lightPrimary"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="165dp"
                />
            <TextView
                android:id="@+id/Profile_image_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Profile_Image_first_name"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:textStyle="italic"
                android:text=""
                android:textColor="@color/lightPrimary"
                android:layout_marginTop="5dp"
                />

        </RelativeLayout>



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/Profile_text_view_acc_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile Details"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:textStyle="normal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    />
                <TextView
                    android:id="@+id/Profile_button_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EDIT"
                    android:layout_marginLeft="295dp"
                    android:layout_marginStart="295dp"
                    android:layout_marginTop="6dp"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:visibility="visible"
                    />

                <TextView
                    android:id="@+id/Profile_button_done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DONE"
                    android:layout_marginLeft="290dp"
                    android:layout_marginStart="290dp"
                    android:layout_marginTop="6dp"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:visibility="invisible"
                    />
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/TextInputLayout_first_name"
                    android:layout_below="@id/Profile_text_view_acc_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    >
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/Profile_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/name"
                        android:inputType="text"
                        android:maxLines="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp"
                        android:textSize="18sp"
                        android:enabled="false"
                        android:textColor="#1e1e1e"
                        />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/TextInputLayout_PhoneNo"
                    android:layout_below="@+id/TextInputLayout_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/Profile_PhoneNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/phone_no"
                        android:inputType="text"
                        android:maxLines="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp"
                        android:textSize="18sp"
                        android:enabled="false"
                        android:textColor="#1e1e1e"
                        />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/TextView_Address"
                    android:layout_below="@+id/TextInputLayout_PhoneNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/address"
                   android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:textSize="18sp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:textColor="@color/colorPrimaryDark"
                    />


                    <EditText
                        android:layout_below="@+id/TextView_Address"
                        android:id="@+id/Profile_Address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/address"
                        android:inputType="textMultiLine"
                        android:maxLines="3"
                        android:minLines="1"
                        android:layout_marginLeft="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="20dp"
                        android:textSize="18sp"
                        android:enabled="false"
                        android:textColor="@color/primaryText"

                        />

            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <Button
            android:id="@+id/Button_LogOut"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/white"
            android:text="@string/log_out"
            />
    </LinearLayout>
</ScrollView>
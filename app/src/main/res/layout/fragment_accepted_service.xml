<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3E6F3"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp">

            <TextView
                android:id="@+id/text_service_accept_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Service is Accept by:-"
                android:textColor="#000"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/Text_Employee_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_service_accept_by"
                android:layout_marginStart="20dp"
                android:text="NAME :-"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/TextView_Employee_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_service_accept_by"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/Text_Employee_Name"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/Text_Employee_Phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TextView_Employee_Name"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="PhoneNo :-"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/TextView_Employee_Phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TextView_Employee_Name"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/Text_Employee_Phone"
                android:textColor="#000"
                android:textSize="20sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>

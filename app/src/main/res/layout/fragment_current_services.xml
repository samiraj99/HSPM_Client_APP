<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/Button_Edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/edit"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/Button_Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/cancel"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/TextView_P1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Button_Cancel"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:text="@string/problem_is"
        android:textColor="@color/primaryText"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/TextView_Problem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Button_Cancel"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@id/TextView_P1"
        android:layout_toRightOf="@id/TextView_P1"
        android:textColor="@color/secondaryText"
        android:textSize="25sp" />

    <RelativeLayout
        android:id="@+id/TimerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView_Problem"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/TextView_findingEmp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:text="@string/finding_nearest_employ"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp" />

        <com.github.jlmd.animatedcircleloadingview.AnimatedCircleLoadingView
            android:id="@+id/AnimatedCircleView"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_below="@id/TextView_findingEmp"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp"
            app:mainColor="@color/colorPrimary"
            app:secondaryColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/TimerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="50sp" />
    </RelativeLayout>

</RelativeLayout>
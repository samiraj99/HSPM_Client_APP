<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:theme="@android:style/Theme.Translucent"
        android:alpha="0.70">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:id="@+id/TextView_AcceptDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date:"
                android:textColor="#fff"
                android:textSize="17sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/AcceptDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/TextView_AcceptDate"
                android:text="temp"
                android:textColor="#fff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/TextView_Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TextView_AcceptDate"
                android:layout_marginTop="5dp"
                android:text="Address:"
                android:textColor="#fff"
                android:textSize="17sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/AcceptDate"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/TextView_Address"
                android:text="temp"
                android:textColor="#fff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/TextView_Problem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Address"
                android:layout_centerHorizontal="true"
                android:text="Problem"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TextView_PcType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TextView_Problem"
                android:text="PcType:"
                android:textColor="#fff"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TextView_ProblemType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TextView_PcType"
                android:layout_marginTop="5dp"
                android:text="ProblemType:"
                android:textColor="#fff"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ProblemType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TextView_PcType"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/TextView_ProblemType"
                android:text="temp"
                android:textColor="#fff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/PcType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TextView_Problem"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/TextView_PcType"
                android:text="temp"
                android:textColor="#fff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/TextView_Employee_Details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ProblemType"
                android:layout_marginStart="70dp"
                android:layout_marginTop="5dp"
                android:text="Employee Details"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TextView_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TextView_Employee_Details"
                android:layout_marginTop="2dp"
                android:text="Name:"
                android:textColor="#fff"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TextView_Employee_Details"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@id/TextView_Name"
                android:text="temp"
                android:textColor="#fff"
                android:textSize="15sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
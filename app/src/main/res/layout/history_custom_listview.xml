<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >
       <RelativeLayout
           android:padding="10dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
        <TextView
            android:id="@+id/TextView_Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address:-"
            android:textSize="30sp"
            android:textColor="#000"
            />
        <TextView
            android:id="@+id/Address"
            android:layout_toEndOf="@+id/TextView_Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="temp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            />
           <TextView
               android:id="@+id/TextView_Problem"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/Address"
               android:layout_marginTop="10dp"
               android:text="Problem"
               android:layout_centerHorizontal="true"
               android:textSize="30sp"
               android:textColor="#000"
               />
           <TextView
               android:id="@+id/TextView_PcType"
               android:layout_below="@+id/TextView_Problem"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="PcType:-"
               android:textSize="25sp"
               android:textColor="#000"
               />
           <TextView
               android:id="@+id/TextView_ProblemType"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="ProblemType:-"
               android:textSize="25sp"
               android:textColor="#000"
               android:layout_marginTop="5dp"
               android:layout_below="@+id/TextView_PcType"
               />
           <TextView
               android:id="@+id/ProblemType"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_toEndOf="@+id/TextView_ProblemType"
               android:layout_below="@+id/TextView_PcType"
               android:text="temp"
               android:textSize="20sp"
               android:layout_marginTop="5dp"
               android:layout_marginStart="10dp"
               />
            <TextView
                android:id="@+id/PcType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/TextView_PcType"
                android:layout_below="@+id/TextView_Problem"
                android:text="temp"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                />

           <TextView
               android:id="@+id/TextView_Employee_Details"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@id/ProblemType"
               android:text="Employee Details"
               android:textSize="30sp"
               android:layout_marginTop="10dp"
               android:textColor="#000"
               android:layout_marginStart="70dp"
               />
            <TextView
                android:id="@+id/TextView_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TextView_Employee_Details"
                android:text="Name:-"
                android:textSize="30sp"
                android:textColor="#000"
                />
           <TextView
               android:id="@+id/Name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/TextView_Employee_Details"
               android:layout_toEndOf="@id/TextView_Name"
               android:layout_marginTop="10dp"
               android:text="temp"
               android:textSize="20sp"
               android:layout_marginStart="10dp"
               />
       </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>